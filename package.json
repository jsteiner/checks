{
  "name": "checks-cli",
  "version": "0.1.0",
  "description": "A concise parallelized local CI runner for humans and coding agents",
  "license": "MIT",
  "keywords": [
    "checks",
    "static analysis",
    "testing",
    "cli",
    "parallel",
    "concurrent",
    "runner"
  ],
  "author": {
    "name": "Josh Steiner"
  },
  "homepage": "https://github.com/jsteiner/checks",
  "repository": "github:jsteiner/checks",
  "type": "module",
  "bin": {
    "checks": "dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "typecheck": "tsc --noEmit",
    "lint:biome": "biome check --write --error-on-warnings",
    "lint:unused": "knip",
    "lint:dupes": "jscpd --config jscpd.json",
    "test": "vitest run --coverage",
    "checks": "pnpm build; node dist/index.js",
    "prepare": "pnpm build"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.7",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.6",
    "@vitest/coverage-v8": "^4.0.15",
    "ink-testing-library": "^4.0.0",
    "jscpd": "^4.0.5",
    "knip": "^5.70.2",
    "typescript": "^5.9.3",
    "vitest": "^4.0.15"
  },
  "dependencies": {
    "@xterm/addon-serialize": "^0.13.0",
    "@xterm/headless": "^5.5.0",
    "commander": "^14.0.2",
    "ink": "^6.5.1",
    "node-gyp": "^12.1.0",
    "node-pty": "1.0.0",
    "p-limit": "^7.2.0",
    "react": "^19.2.0",
    "zod": "^4.1.12"
  },
  "files": [
    "dist",
    "checks.config.schema.json"
  ]
}
